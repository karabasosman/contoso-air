[32m+[m[32m// Dark Mode Toggle Functionality[m
[32m+[m[32mdocument.addEventListener('DOMContentLoaded', function() {[m
[32m+[m[32m    const darkModeToggle = document.getElementById('dark-mode-toggle');[m
[32m+[m[32m    const body = document.body;[m
[32m+[m[41m    [m
[32m+[m[32m    // Check for saved dark mode preference or default to light mode[m
[32m+[m[32m    const savedMode = localStorage.getItem('darkMode');[m
[32m+[m[32m    if (savedMode === 'enabled') {[m
[32m+[m[32m        body.classList.add('dark-mode');[m
[32m+[m[32m        updateToggleButton(true);[m
[32m+[m[32m    }[m
[32m+[m[41m    [m
[32m+[m[32m    // Toggle dark mode when button is clicked[m
[32m+[m[32m    if (darkModeToggle) {[m
[32m+[m[32m        darkModeToggle.addEventListener('click', function() {[m
[32m+[m[32m            body.classList.toggle('dark-mode');[m
[32m+[m[32m            const isDarkMode = body.classList.contains('dark-mode');[m
[32m+[m[41m            [m
[32m+[m[32m            // Save preference to localStorage[m
[32m+[m[32m            if (isDarkMode) {[m
[32m+[m[32m                localStorage.setItem('darkMode', 'enabled');[m
[32m+[m[32m            } else {[m
[32m+[m[32m                localStorage.setItem('darkMode', 'disabled');[m
[32m+[m[32m            }[m
[32m+[m[41m            [m
[32m+[m[32m            updateToggleButton(isDarkMode);[m
[32m+[m[32m        });[m
[32m+[m[32m    }[m
[32m+[m[41m    [m
[32m+[m[32m    function updateToggleButton(isDarkMode) {[m
[32m+[m[32m        if (darkModeToggle) {[m
[32m+[m[32m            darkModeToggle.textContent = isDarkMode ? '‚òÄÔ∏è' : 'üåô';[m
[32m+[m[32m            darkModeToggle.setAttribute('aria-label', isDarkMode ? 'Switch to light mode' : 'Switch to dark mode');[m
[32m+[m[32m        }[m
[32m+[m[32m    }[m
[32m+[m[32m});[m
